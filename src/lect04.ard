\data KK' (n : Nat) \elim n
  | 0 => kk1
  | suc n => kk2 (KK' (suc n))

\func KK'-unique {n : Nat} (xs : KK' (suc n)) : Empty \elim xs
  | kk2 xs => KK'-unique xs

-- 5. Элиминаторы.

{-
